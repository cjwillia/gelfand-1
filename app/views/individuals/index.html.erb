<div class="row">
  <p><h3><strong><%= flash[:error] %></strong></h3></p>

  <div class="small-2 columns leftNav">
    <img src="<%= asset_path( 'gelfandLogo.jpg' ) %>" /> 
     <ul class="side-nav">
      <li><%= link_to 'New Individual', new_individual_path %> </li>
      <li><%= link_to 'Organizations', organizations_path %> </li>
      <li><%= link_to 'Programs', programs_path %></li>
    </ul> 
    <br />
  </div>

 
  <div class="small-10 columns rightContent">
    <h1>All Registered Individuals</h1>

    <table>
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Role</th>
          <th>Active</th>
          <th>Bg check link</th>
          <th>Contact</th>

        </tr>
      </thead>

      <tbody>
        <!-- Sethu note: @individuals gets only active individuals, not sure why -->
        <% @individuals.each do |individual| %>
          <tr>
            <td><%= individual.f_name %></td>
            <td><%= individual.l_name %></td>
            <td><%= individual.format_role %></td>
            <td><%= individual.active %></td>
                <% unless individual.bg_check.nil? %>
                    <td><%= link_to 'Bg Check', bg_check_path(individual.bg_check) %></td>
                <% else %>
                    <td> </td>
                <% end %>
            <td></td>
            <td class="row_actions"><%= link_to "#{image_tag('list_bullets.png')}".html_safe, individual %></td>
            <td class="row_actions"><%= link_to "#{image_tag('edit.png', size: "22x22")}".html_safe, edit_individual_path(individual) %></td>
            <td class="row_actions"><%= link_to "#{image_tag('remove.gif', size: "16x16", alt: "Remove?")}".html_safe, individual, method: :delete, data: { confirm:        'Are you sure?' } %></td>   
          </tr>     
        <% end %>
      </tbody>      
    </table>        

    <br>
  </div>

</div>
