<div id="alerts" class="row">
    <!-- Alerts go here. -->
    <% if flash[:notice] %>
        <div data-alert class="alert-box slow-fade radius">
            <%= flash[:notice] %>
            <a href="#" class="close">&times;</a>
        </div>
    <% end %>
</div>

<div class="row text-center">
	<h1>Please confirm your email address</h1>
	<p>A message has been sent to <%= session[:temp_email] %> with instructions on how to proceed further.</p>
	<!-- Possibly add a resend button if I can figure that out. -->
</div>