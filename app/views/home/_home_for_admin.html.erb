<div class="row">
	<div class="small-2 large-2 columns">
		<h4> Requested </h4>
	</div>
	<div class="small-2 large-2 columns">
		<h4> Criminal Passed </h4>
	</div>
	<div class="small-2 large-2 columns">
		<h4> Child Abuse Passed </h4>
	</div>
	<div class="small-2 large-2 columns">
		<h4> Under Review </h4>
	</div>
	<div class="small-2 large-2 columns">
		<h4> Not Cleared </h4>
	</div>
	<div class="small-2 large-2 columns">
		<h4> Expired </h4>
	</div>
</div>

<div class="row">
	<!-- Requested -->
	<div class="small-2 large-2 columns">
		<!-- content -->
		<% @bgChecks_requested.each do |bgcheck| %>
			<% if bgcheck.date_requested < 7.days.ago %>
				<div class="panel callout"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<% else %>
				<div class="panel"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<%end%>
		<% end %>
	</div>

	<!-- Criminal passed -->
	<div class="small-2 large-2 columns">
		<!-- content -->
		<% if @bgChecks_pCriminal %>
			<% @bgChecks_pCriminal.each do |bgcheck| %>
				<div class="panel"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<% end %>
		<% end %>
	</div>

	<!-- Child Abuse passed -->
	<div class="small-2 large-2 columns">
		<!-- content -->
		<% if @bgChecks_pChildAbuse %>
			<% @bgChecks_pChildAbuse.each do |bgcheck| %>
				<div class="panel"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<% end %>
		<% end %>
	</div>

	<!-- Under review -->
	<div class="small-2 large-2 columns">
		<!-- content -->
		<% if @bgChecks_underReview %>
			<% @bgChecks_underReview.each do |bgcheck| %>
				<div class="panel"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<% end %>
		<% end %>
	</div>

	<!-- Not cleared  -->
	<div class="small-2 large-2 columns">
		<!-- content -->
		<% if @bgChecks_nCleared %>
			<% @bgChecks_nCleared.each do |bgcheck| %>
				<div class="panel"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<% end %>
		<% end %>
	</div>

	<!-- Expired  -->
	<div class="small-2 large-2 columns">
		<!-- content -->
		<% if @bgChecks_expired %>
			<% @bgChecks_expired.each do |bgcheck| %>
				<div class="panel"><%= link_to bgcheck.individual.name, bg_check_path(bgcheck) %></div>
			<% end %>
		<% end %>
	</div>
</div>