<div class="contain-to-grid">
   <nav class="top-bar" data-topbar>
	  <ul class="title-area">
	    <li class="name">
	      <a id="titleLink" href="/">Gelfand Center</a>
		    </li>
	    <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
	  </ul>

  <section class="top-bar-section"> <!-- changing this to <section class="top-bar-section"> hides dropdowns, but does not re-					appear -->
	  <ul class="left">
		<!-- Code for search: Start -->
			<li class="has-form">
			  <div class="row collapse">
			    <div class="large-8 small-9 columns">
			      <input type="text" placeholder="Find something">
			    </div>
			    <div class="large-4 small-3 columns">
			      <a href="#" class="alert button expand">Search</a>
			    </div>
			  </div>
			</li>
			<!-- Code for search: End-->
	  </ul>

  	    <!-- Right Nav Section -->
	<ul class="right">
		<% if !current_user.nil?%>
			<li><%= link_to "My Account", individual_path(current_user.individual) %>
			</li>
		<%end%>
	      <li><a href="/gelfand_contact_page.html">Contact Us</a></li>
	      <li class="divider"></li>

		  <li id="signup">
	       <a href="/users/sign_in" id="signupLink">
	         Sign Up
	       </a>

		  <li class="divider"></li>
          
          <li id="login">
	       <a id="login-trigger">
	         Log in <span>â–¼</span>
	       </a>
	       	<!-- form stuff for 'Login' tab-->
			      <div id="login-content">

			      <%= form_for(User.new, :url => user_session_path) do |f| %>
				      	<fieldset>
				      		<div id="inputs">

							  <%= f.email_field :email, :autofocus => true, :id => 'email' , :placeholder => "Email address", :required => true %>

							  <%= f.password_field :password, :id => 'password', :placeholder=>"Password", :required => true %>
							  <br>
							  <%= f.submit "Submit" , id: 'submit' %>
							</div>
						</fieldset>

				  <% end %>
					<a id="forgotPass" href="/users/password/new">Forgot password? </a>
				  </div>                     
	    </li>
    </ul>

  </section>
  </nav>
</div>

<!-- messages for Error, Success, Alrt -->
<p><h3><strong><%= flash[:error] %></strong></h3></p>
<p><h3><strong><%= flash[:notice] %></strong></h3></p>
<p><h3><strong><%= flash[:alert] %></strong></h3></p>


