<div class="row">
  <div class="small-3 columns leftNav">
      <img src="<%= asset_path( 'gelfandLogo.jpg' ) %>" /> 
      <ul class="side-nav">
          <li><div id="activeHeading">Actions </li>
          <li><%= link_to 'Create a Organization', new_organization_path %> </li>
         <li><%= link_to 'Create a Program', new_program_path %></li>

    <br>
    <br>

    <% unless current_user.orgs_that_user_is_Admin_for.empty? %>
            <li><div id="activeHeading">Manage</a></li>
            
            <% current_user.orgs_that_user_is_Admin_for.each do |org| %>
                <li id="underManage"><%= link_to org.name, edit_organization_path(org) %> </li>
            <% end %>
        
    <% end %>

    </ul> 
  </div>


  <div class="small-9 columns rightContent">
      <h1>Organizations</h1>

    <% if current_user.get_all_memberships.empty? %>
      Hi <%= current_user.get_first_name %>. <br>
      Currently you are not part of any Organizations and consequently programs. <br>
      Click on the side bar to create an Organization or Program. <br>
      Or wait until someone adds you to their Organization and/or Program.


    <% else  %>
        <div class="my_memberships_outerDiv">
            <h3> Memberships </h3>
            <% current_user.orgs_that_user_is_part_of.each do |org| %>
                    <ul class="my_memberships_list"><%= link_to org.name, organization_path(org) %>
            
            <% if current_user.get_programs_for_an_org(org).nil? %>
                    <li id="prog_under_org"><%= link_to "-- No programs yet -- Click here", new_program_path %></li> 
            <% else %>
                <% current_user.get_programs_for_an_org(org).each do |program| %>
                        <li id="prog_under_org"><%= link_to program.name, program_path(program) %></li>
                <% end %>
            <% end %>
                    </ul>

            <% end %>
        </div>
    <% end %>

    
   </div>
</div>    


