<div class="row">
  <div class="small-3 columns indexLeftHalf">
      <img src="<%= asset_path( 'gelfandLogo.jpg' ) %>" /> 
      <ul class="side-nav">
          <li><%= link_to 'View Information', organizations_path, :id => "active" %> </li>
          <li><%= link_to 'Create a Organization', new_organization_path %> </li>
         <li><%= link_to 'Create a Program', new_program_path %></li>

    <br>
    <br>

    <% unless current_user.get_orgs.nil? %>
            <li><strong><%= link_to 'Manage', organizations_path %> </strong></li>
            <% current_user.get_orgs.each do |org| %>
                <li id="underManage"><%= link_to org.name, edit_organization_path(org) %> </li>
            <% end %>
        
    <% end %>

    </ul> 
  </div>


  <div class="small-9 columns indexRightHalf">
      <h1>Organizations</h1>

    <% if current_user.get_orgs.nil? %>
      <% current_user.get_first_name %> is not part of any Organizations

    <% else  %>
        <div class="my_memberships_outerDiv">
            <h3> Memberships </h3>
            <% current_user.get_orgs.each do |org| %>
                    <ul class="my_memberships_list"><%= link_to org.name, edit_organization_path(org) %>
            
            <% unless current_user.get_admin_programs.nil? %>
            <% current_user.get_admin_programs.each do |program| %>
                    <li id="prog_under_org"><%= link_to program.name, edit_program_path(program) %></li>
            <% end %>
                    </ul>
            <% end %>
            <% end %>
        </div>
    <% end %>

    
   </div>
</div>    


