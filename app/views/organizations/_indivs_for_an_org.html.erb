<%= form_tag delete_multiple_memberships_path, method: :delete do %>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>First name</th>
            <th>Last name</th>
            <th>Active</th>
            <th>Role</th>
          </tr>
        </thead>

        <tbody>
            <% @organization.memberships.each do |mem| %>
              <tr>
                <td><%= check_box_tag "membership_ids[]", mem.id %> </td>
                <td><%= mem.individual.f_name %></td>
                <td><%= mem.individual.l_name %></td>
                <td><%= mem.individual.active %></td>
                <td><%= mem.individual.role %></td>

                <td class ="OrgMembers"><%= link_to "#{image_tag('list_bullets.png')}".html_safe, individual_path(mem.individual) %></td>
                  <% if current_user.is_orgUser_for_specific_org(@organization) %>
                  <!-- For below "#{image_tag('remove.gif')} Remove"
                      helpful link: http://stackoverflow.com/questions/5387122/link-to-image-tag-with-text-in-rails
                       - searched this in Google "image appear link_to next to rails"
                   -->
                     <td class ="OrgMembers"><%= link_to "#{image_tag('remove.gif', size: "16x16", alt: "Remove this member?")}".html_safe, mem, method: :delete %></td>
                  <% end %>
              </tr>
            <% end %>
        </tbody>
      </table>

    <%= submit_tag "Delete selected" %>
<% end %>
    