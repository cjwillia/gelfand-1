
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Last, First name</th>
            <th>Role</th>
          </tr>
        </thead>
<%= form_tag delete_multiple_memberships_path, method: :delete do %>
        <tbody>
            <% @organization.memberships.each do |mem| %>
              <tr>
                <td><%= check_box_tag "membership_ids[]", mem.id %> </td>
                <td><%= mem.individual.l_name %>, <%= mem.individual.f_name %></td>
                <td><%= mem.individual.role %></td>

                <td class ="OrgMembers"><%= link_to "#{image_tag('list_bullets.png')}".html_safe, individual_path(mem.individual) %></td>
                  <% if current_user.is_orgUser_for_specific_org(@organization) %>
                  <!-- For below "#{image_tag('remove.gif')} Remove"
                      helpful link: http://stackoverflow.com/questions/5387122/link-to-image-tag-with-text-in-rails
                       - searched this in Google "image appear link_to next to rails"
                   -->
                     <td class ="OrgMembers"><%= link_to "#{image_tag('remove.gif', size: "16x16", alt: "Remove this member?")}".html_safe, mem, method: :delete %></td>
                  <% end %>
              </tr>
            <% end %>
        </tbody>
    <%= submit_tag "Delete selected", :name => "#{@organization.id}", :class => "formDeleteButton" %>
<% end %>

<!-- Indivs NOT part of Org -->
    <!-- no need to define method here because forms always default to POST -->
<%= form_tag multiple_new_memberships_path do %>
        <tbody>
            <% @organization.indivs_not_already_part_of_org.each do |indiv| %>
              <tr>
                <td><%= indiv.l_name %>, <%= indiv.f_name %></td>
                <td><%= indiv.role %></td>
                <td class ="OrgMembers"><%= link_to "#{image_tag('list_bullets.png')}".html_safe, individual_path(indiv) %></td>
                <td><%= check_box_tag "indiv_ids[]", indiv.id %> </td>
              </tr>
              <% end %>
        </tbody>
    <%= submit_tag "Add selected", :name => "#{@organization.id}", :class => "addingFormButton" %>
<% end %>
      
      </table>
      <br>

