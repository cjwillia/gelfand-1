<%= form_for(@organization) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "org-text-area" %>
  </div>
    <%= f.hidden_field :active, :value => true %>
  <div class="field">
    <%= f.label :department %>
    <%= f.text_field :department %>
  </div>
  <br>
  <br>

  <% if !@individuals.nil? %> 
  <!-- Only display options to add people if at org Manage page -->
          <!-- Add existing members non-email -->
          <h3>Add People to your Organization</h3>

          <h5>Search by Name</h5>

          <div id="programs-new-orgselect" class="row">
              <div class="small-5 columns panel chosen-select-panel">
                    <%= f.collection_select :individual_ids, @individuals, :id, :name, {:include_blank => false}, {:class => "chosen-select", :multiple => "true"} %>
              </div>
            </div>

          <!-- Add existing members email; if not in system then send email for them to sign up-->
          <h5>Add by email</h5>
          <%= f.text_field :new_emails, :id => "tags" %> 


          <br>
          <br>

          <!-- Remove members from org-->
          <h3>Remove members from this Organization</h3>

          <h5>Search by Name</h5>

          <div id="programs-new-orgselect" class="row">
              <div class="small-5 columns panel chosen-select-panel">
                    <%= f.collection_select :individual_ids, @indivs_in_org, :id, :name, {:include_blank => false}, {:class => "chosen-select", :multiple => "true"} %>
              </div>

  <% end %>


  <br>

  <div class="row">
    <div class="small-3 columns">
      <div class="actions">
        <%= f.submit "Submit", :class => "button" %>
      </div>
    </div>
  </div>
<% end %>
