<%= form_for(@organization) do |f| %>
  <% if @organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
      <% @organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :is_partner, "Are you a Carnegie Mellon University organization? (This includes faculty projects and student organizations)." %>
    <%= radio_button_tag(:is_partner, "true") %>
    <%= label_tag(:is_partner, "Yes") %>
    <%= radio_button_tag(:is_partner, "false") %>
    <%= label_tag(:is_partner, "No") %>

  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
    <%= f.hidden_field :active, :value => true %>
  <div class="field">
    <%= f.label :department %>
    <%= f.text_field :department %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", :class => "button" %>
  </div>
<% end %>
