<!-- DEVISE puts its alerts in flash[:notice] -->
<div id="alerts" class="row">
	<!-- Alerts go here. -->
	<!-- HEY there are two alerts here so screw it, I'm getting rid of the devise one. (flash[:notice]) -->
	<!-- love, Cory -->

	<% if flash[:error] %>
		<div data-alert class="alert-box slow-fade radius">
			<%= flash[:error] %>
			<a href="#" class="close">&times;</a>
		</div>
	<% end %>


</div>

<div class="row">
  <div class="small-4 columns">&nbsp;</div>
  <div class="small-4 columns">

	<h2>Sign in</h2>
	<br>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>

	  <%= f.password_field :password, :placeholder => "Password" %>

	  <br>

	 <class="test" style="position:absolute;right:10px;"> 	<%= f.submit "Sign in", :class => "button"%>
	<% end %>

  </div>
  <div class="small-4 columns">&nbsp;</div>
</div>

