<%= form_for(@bg_check) do |f| %>
  <% if @bg_check.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bg_check.errors.count, "error") %> prohibited this bg_check from being saved:</h2>

      <ul>
      <% @bg_check.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <div class="field">
      <%= f.label :status %><br>
        <%= f.select :status, [['Requested', 0], ['Criminal Passed', 1], ['Child Abuse Passed', 2], ['Under Review', 3], ['Not Cleared', 4]], {:include_blank => true, :default => nil}  %>
    </div>
    <div class="field">
      <%= f.label :criminal_date %><br>
      <%= f.date_select :criminal_date, {:include_blank => true, :default => nil} %>
    </div>
    <div class="field">
      <%= f.label :child_abuse_date %><br>
      <%= f.date_select :child_abuse_date, {:include_blank => true, :default => nil} %>
    </div>
  <% elsif current_user.member?%>
    <%= f.hidden_field :status, :value => 0, :readonly => true %>
  <% end %>
  <div class="actions">
    <% if current_user.admin? %>
      <%= f.submit :class => 'button'%>
    <% else %>
      <%= f.submit "Continue", :class => "button" %>
    <% end %>
  </div>
<% end %>
