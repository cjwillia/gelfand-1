<div class="row">

  <% if current_user.admin? %>
  <h1>Background Check for <%=@bg_check.individual.proper_name%></h1>

  <p>
    <strong>Status:</strong>
    <%= @bg_check.status %>
  </p>

  <p>
    <strong>Criminal date:</strong>
    <%= @bg_check.criminal_date %>
  </p>

  <p>
    <strong>Child abuse date:</strong>
    <%= @bg_check.child_abuse_date %>
  </p>
    <%= link_to 'Edit', edit_bg_check_path(@bg_check) %> |
    <%= link_to 'Back', bg_checks_path %>

  <% else %>
    <h1 class="text-center">My Background Check Status</h1>
    <div class="bg-wrapper">
      <div class="bg-status-bar">

        <div class="row text-center">
          <% if @bg_check.status == 0 %>
            <div class="small-3 small-offset-1 columns"><strong class="current-step">Started</strong></div>
            <div class="small-1 column">></div>
            <div class="small-3 columns">In Progress</div>
            <div class="small-1 column">></div>
            <div class="small-3 columns">Finished</div>

          <% elsif @bg_check.status == 1 || @bg_check.status == 3 %>
            <div class="small-3 small-offset-1 columns">Started</div>
            <div class="small-1 column">></div>
            <div class="small-3 columns"><strong class="current-step">In Progress</strong></div>
            <div class="small-1 column">></div>
            <div class="small-3 columns">Finished</div>
          <% else %>
            <div class="small-3 small-offset-1 columns">Started</div>
            <div class="small-1 column">></div>
            <div class="small-3 columns">In Progress</div>
            <div class="small-1 column">></div>
            <div class="small-3 columns"><strong class="current-step">Finished</strong></div>
          <% end %>
        </div>

      </div>
      <br>
      <div class="bg-body">
        <% if @bg_check.status == 0 %>
              <%= render 'requested' %>
        <% elsif @bg_check.status == 1 %>
              <%= render 'crim_passed' %>
        <% elsif @bg_check.status == 2 %>
              <%= render 'all_passed'%>
        <% elsif @bg_check.status == 3 %>
              <%= render 'under_review' %>
        <% elsif @bg_check.status == 4 %>
              <%= render 'excluded'%>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
