<div class="row">
  <div class="row">
    <h1>Background Checks</h1>
  </div>
  <br />
  <div class="row">
      <!-- Filter button -->
      <div class="small-4 columns">
            <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button dropdown">
              <% filter = ""
                if params[:filter] == nil 
                  filter = "In Progress"
                elsif params[:filter] == "all"
                  filter = "All"
                elsif params[:filter] == "submitted"
                  filter = "Submitted"
                elsif params[:filter] == "passed_criminal"
                  filter = "Criminal Passed"
                elsif params[:filter] == "passed_child_abuse"
                  filter = "Child Abuse Passed"
                elsif params[:filter] == "picked_up"
                  filter = "Completed"
                elsif params[:filter] == "has_issues"
                  filter = "Has Issues"
                elsif params[:filter] == "in_progress"
                  filter = "In Progress"
                elsif params[:filter] == "urgency"
                  filter = "Urgency"
                end%>
                <%= filter %>
            </button><br />
            <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true" tabindex="-1">
              <li><%= link_to "All", params.merge(:filter => :all) %></li>
              <li><%= link_to "Submitted", params.merge(:filter => :submitted) %></li>
              <li><%= link_to "Criminal Passed", params.merge(:filter => :passed_criminal) %></li>
              <li><%= link_to "Child Abuse Passed", params.merge(:filter => :passed_child_abuse) %></li>
              <li><%= link_to "Completed", params.merge(:filter => :picked_up) %></li>
              <li class="divider"></li>
              <li><%= link_to "Has Issues", params.merge(:filter => :has_issues) %></li>
              <li><%= link_to "In Progress", params.merge(:filter => :in_progress) %></li>
              <li><%= link_to "Urgency", params.merge(:filter => :urgency) %></li>
            </ul>
      </div>
      <!-- Search text area -->
      <div class="small-6 columns">
          <%= form_tag bg_checks_path, :method => 'get', :id => "bg_checks_search" do %>
          <%= text_field_tag :search, params[:search] %>
      </div>
      <!-- Search button -->
      <div class="small-2 columns">
              <%= submit_tag "Search", :name => nil, :class => "alert button expand" %>
              <% end %>
      </div>
  </div>
 

<div id="bg_checks">
    <%= render 'bg_checks' %>
</div>

</div>