<%= form_for(@program) do |f| %>
	<div class="cushionWrapper">
		<% if @program.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>

	      		<ul>
	      			<% @program.errors.full_messages.each do |msg| %>
		        		<li><%= msg %></li>
	      			<% end %>
	      		</ul>
			</div>
		<% end %>

		<div class="field">
			<%= f.label :name %>
	    	<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :description %>
			<i>A short description of the program</i>
			<%= f.text_field :description %>
		</div>

		<div class="row" id="dates">
			<div class="small-6 columns">
				<%= f.label :start_date %>
				<%= f.text_field :start_date, :as => :string, :class => "datepicker" %>
			</div>
			<div class="small-6 columns">
				<%= f.label :end_date %>
				<%= f.text_field :end_date, :as => :string, :class => "datepicker" %>
			</div>

		</div>

		<div class="field">
			<%= f.label :cmu_facilities %>
			<%= f.text_field :cmu_facilities %>
		</div>

		<div class="field">
			<%= f.label :off_campus_facilities %>
			<%= f.text_field :off_campus_facilities %>
		</div>

		<div class="field">
			<%= f.label :number_of_minors %>
			<%= f.number_field :num_minors %>
		</div>

		<div class="field">
			<%= f.label :number_of_adults_supervising %>
			<%= f.number_field :num_adults_supervising %>
		</div>

		<div class="row">
			<%= f.submit "Create Program", :class => "button" %>
		</div>
	</div>

<% end %>
